@page "/"
@attribute [StreamRendering(true)]
@inject IPlantService PlantService
@inject NavigationManager NavigationManager

<!--***********************************************************************
*                                CSS/STYLING SECTION
************************************************************************-->
<style>
    :root {
        --primary-color: #4CAF50;
        --primary-light: #7AC142;
        --secondary-color: #388E3C;
        --accent-color: #8BC34A;
        --light-color: #F1F8E9;
        --dark-color: #1B5E20;
        --gray-color: #bdbdbd;
        --shadow: 0 4px 6px rgba(0,0,0,0.1);
        --card-shadow: 0 10px 20px rgba(0,0,0,0.1);
        --font-main: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
        font-family: var(--font-main);
        background-color: #f8f9fa;
        color: #333;
        line-height: 1.6;
    }

    .hero-section {
        height: 80vh;
        background: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)), 
                    url('/background_photos/Leafy.jpg') 
                    center/cover no-repeat;
        color: white;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        padding: 0 20px;
    }

    .hero-title {
        font-size: 3.5rem;
        margin-bottom: 1rem;
    }

    .hero-subtitle {
        font-size: 1.5rem;
        margin-bottom: 2rem;
    }

    .hero-buttons {
        display: flex;
        gap: 20px;
        justify-content: center;
    }

    .btn-hero {
        padding: 12px 24px;
        font-size: 1.1rem;
        border-radius: 30px;
        cursor: pointer;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
        display: inline-flex;
        align-items: center;
    }

    .btn-hero-primary {
        background-color: var(--primary-color);
        color: white;
    }

    .btn-hero-secondary {
        background-color: white;
        color: var(--dark-color);
    }

    .features-section {
        padding: 5rem 0;
        background-color: white;
        text-align: center;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 2rem;
        margin-top: 3rem;
    }

    .feature-card {
        padding: 2rem;
        border-radius: 10px;
        background-color: white;
        box-shadow: 0 8px 16px rgba(76, 175, 80, 0.4); /* Green shadow */
        border: 2px solid rgba(76, 175, 80, 0.7); /* Thin green outline */
        transition: all 0.3s ease;
    }

        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 20px rgba(76, 175, 80, 0.6); /* Stronger green shadow on hover */
            border: 2px solid rgba(76, 175, 80, 1); /* Darker green outline on hover */
        }

    .testimonial-section {
        padding: 5rem 0;
        background-color: var(--light-color);
        text-align: center; /* Centers the heading */
    }

    .testimonial-card {
        background-color: white;
        padding: 2rem;
        border-radius: 10px;
        box-shadow: var(--shadow);
    }

    .cta-section {
        padding: 5rem 0;
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        color: white;
        text-align: center;
    }
</style>

<!--***********************************************************************
*                                HTML SECTION
************************************************************************-->
<div class="hero-section">
    <h1 class="hero-title">Keep Your Plants Thriving</h1>
    <p class="hero-subtitle">Track care, monitor growth, and become a better plant parent</p>
    <div class="hero-buttons">
        <a class="btn-hero btn-hero-primary" href="Account/Login">Login</a>
        <a class="btn-hero btn-hero-secondary" href="Account/Register">Register</a>
    </div>
</div>

<section class="features-section">
    <h2>Why Use Evera</h2>
    <div class="features-grid">
        <div class="feature-card">
            <img src="/background_photos/care_schedule.jpg" alt="Care Schedule" width="80">
            <h3>Care Schedule</h3>
            <p>Keep track of watering, fertilizing, and pruning tasks.</p>
        </div>
        <div class="feature-card">
            <img src="/background_photos/growth_tracking.jpg" alt="Growth Tracking" width="80">
            <h3>Growth Tracking</h3>
            <p>Monitor plant health with a visual history.</p>
        </div>
        <div class="feature-card">
            <img src="/background_photos/plant_encyclopedia.jpg" alt="Plant Encyclopedia" width="80">
            <h3>Plant Encyclopedia</h3>
            <p>Access plant care information and tips.</p>
        </div>
    </div>
</section>

<section class="testimonial-section">
    <h2>What Our Users Say</h2>
    <div class="testimonial-card">
        <p>"Since using Evera, my plants are thriving! The care history feature is so helpful!"</p>
        <h4>- Alex Johnson</h4>
    </div>
    <div class="testimonial-card">
        <p>"I used to constanty forget to water my plants. Since using this tracker, not a single leaf has turned brown!"</p>
        <h4>- Morgan Smith</h4>
    </div>

</section>

<section class="cta-section">
    <h2>Ready to Start Growing?</h2>
    <p>Track your plants today and watch them flourish.</p>
    <button class="btn-hero btn-hero-secondary" id="scrollToTopBtn">Get Started Now</button>
</section>

