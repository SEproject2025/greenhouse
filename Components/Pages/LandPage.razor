@page "/"
@attribute [StreamRendering(true)]
@inject IPlantService PlantService
@inject NavigationManager NavigationManager

<!--***********************************************************************
*                                CSS/STYLING SECTION
************************************************************************-->
<style>
    /* Base styles */
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
        color: #333;
        line-height: 1.6;
    }

    /* HERO SECTION */
    .hero-section {
        height: 80vh;
        background: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)), url('/background_photos/Leafy.jpg') center/cover no-repeat;
        color: white;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
    }

    .hero-title {
        font-size: 3.5rem;
        margin-bottom: 1rem;
        font-family: 'Georgia', serif;
    }

    .hero-subtitle {
        font-size: 1.5rem;
        margin-bottom: 2rem;
    }

    .hero-button-container {
        display: flex;
        gap: 20px;
        justify-content: center;
    }

    .login-button {
        background-color: #6BBF59;
        color: #FFFFFF;
        border: none;
        padding: 12px 20px;
        border-radius: 25px;
        font-size: 16px;
        cursor: pointer;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        transition: background-color 0.3s ease;
        font-family: 'Georgia', serif;
    }

        .login-button:hover {
            background-color: #5AA74E;
        }

    .register-button {
        background-color: white;
        color: #1B5E20;
        border: none;
        padding: 12px 20px;
        border-radius: 25px;
        font-size: 16px;
        cursor: pointer;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        transition: background-color 0.3s ease;
        font-family: 'Georgia', serif;
    }

        .register-button:hover {
            background-color: #e0f2e9;
        }

    /* FEATURES SECTION */
    .features-section {
        padding: 5rem 0;
        background-color: white;
        text-align: center;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 2rem;
        margin-top: 3rem;
    }

    .feature-card {
        padding: 2rem;
        border-radius: 10px;
        background-color: white;
        box-shadow: 0 8px 16px rgba(76, 175, 80, 0.4);
        border: 2px solid rgba(76, 175, 80, 0.7);
        transition: all 0.3s ease;
        color: #2C6E49;
        font-family: 'Georgia', serif;
    }

        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 20px rgba(76, 175, 80, 0.6);
            border-color: rgba(76, 175, 80, 1);
        }

    /* TESTIMONIAL SECTION */
    .testimonial-section {
        padding: 5rem 0;
        background-color: white;
        text-align: center;
    }

    .testimonial-card {
        background-color: white;
        padding: 2rem;
        margin: 2rem auto;
        max-width: 500px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        color: #2C6E49;
        font-family: 'Georgia', serif;
        border: 2px solid rgba(76, 175, 80, 0.7);
        transition: all 0.3s ease;
    }

    /* READY TO START GROWING  */
    .cta-section {
        padding: 5rem 0;
        background: #CFE8A9;  /* Light Green*/
        color: white;
        text-align: center;
        color: #2C6E49;
        font-family: 'Georgia', serif;
    }

    .cta-button {
        background-color: white;
        color: #1B5E20;
        border: none;
        padding: 12px 24px;
        border-radius: 25px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        font-family: 'Georgia', serif;
    }

        .cta-button:hover {
            background-color: #d4eede;
        }

    /* Styling for the 2 headers  */
    .header-text{
        color: #2C6E49;
        font-family: 'Georgia', serif;
        font-weight: 600;
    }
</style>

<!--***********************************************************************
*                                HTML SECTION
************************************************************************-->
<div class="hero-section">
    <h1 class="hero-title">Keep Your Plants Thriving</h1>
    <p class="hero-subtitle">Track care, monitor growth, and become a better plant parent</p>
    <div class="hero-button-container">
        <a class="login-button" href="Account/Login">LOGIN</a>
        <a class="register-button" href="Account/Register">REGISTER</a>
    </div>
</div>

<section class="features-section">
    <h2 class="header-text">Why Use Evera</h2>
    <div class="features-grid">
        <div class="feature-card">
            <img src="/background_photos/care_schedule.jpg" alt="Care Schedule" width="80">
            <h3>Care Schedule</h3>
            <p>Keep track of watering, fertilizing, and pruning tasks.</p>
        </div>
        <div class="feature-card">
            <img src="/background_photos/growth_tracking.jpg" alt="Growth Tracking" width="80">
            <h3>Growth Tracking</h3>
            <p>Monitor plant health with a visual history.</p>
        </div>
        <div class="feature-card">
            <img src="/background_photos/plant_encyclopedia.jpg" alt="Plant Encyclopedia" width="80">
            <h3>Plant Encyclopedia</h3>
            <p>Access plant care information and tips.</p>
        </div>
    </div>
</section>

<section class="testimonial-section">
    <h2 class="header-text">What Our Users Say</h2>
    <div class="testimonial-card">
        <p>"Since using Evera, my plants are thriving! The care history feature is so helpful!"</p>
        <h4>- Alex Johnson</h4>
    </div>
    <div class="testimonial-card">
        <p>"I used to constanty forget to water my plants. Since using this tracker, not a single leaf has turned brown!"</p>
        <h4>- Morgan Smith</h4>
    </div>

</section>

<section class="cta-section">
    <h2>Ready to Start Growing?</h2>
    <p>Track your plants today and watch them flourish.</p>
    <button class="cta-button" id="scrollToTopBtn">Get Started Now</button>
</section>

