@page "/"

<!--***********************************************************************
*	                             CSS/STYLING SECTION                      *
************************************************************************-->
<style>
    /* Styling for the title */
    .welcome-title {
        font-size: 48px; /* Bigger font size */
        color: #2C6E49;
        text-align: center;
        margin-bottom: 30px;
        font-family: 'Georgia', serif;
    }

    /* Button styling */
    .btn {
        background-color: #6BBF59;
        color: #FFFFFF;
        border: none;
        padding: 12px 20px;
        border-radius: 25px;
        font-size: 16px;
        margin: 10px 5px;
        cursor: pointer;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        transition: background-color 0.3s ease;
        text-decoration: none; /* Remove underline from links styled as buttons */
    }

    .btn:hover {
        background-color: #5AA74E;
    }

    /* Center the login/logout buttons */
    .button-container {
        display: flex;
        justify-content: center; /* Centers buttons horizontally */
        gap: 20px;
        margin-top: 20px;
    }
</style>

<!--***********************************************************************
*	                             HTML SECTION                             *
************************************************************************-->

<h1 class="welcome-title">Welcome to Blossom</h1>

<div class="button-container">
    <AuthorizeView>
        <Authorized>
            <a href="/Identity/Account/Logout" class="btn">Logout</a>
        </Authorized>
        <NotAuthorized>
            <a href="/Identity/Account/Login" class="btn">Login</a>
        </NotAuthorized>
    </AuthorizeView>
</div>

