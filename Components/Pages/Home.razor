@page "/"
@attribute [StreamRendering(true)]
@inject IPlantService PlantService
@inject NavigationManager NavigationManager

<!--***********************************************************************
*	                             CSS/STYLING SECTION
************************************************************************-->
<style>
    .container {
        font-family: 'Arial', sans-serif;
        color: #2C6E49;
        text-align: center;
        padding: 50px;
    }

    .title {
        font-size: 36px;
        margin-bottom: 20px;
        font-family: 'Georgia', serif;
    }

    .subtitle {
        font-size: 20px;
        margin-bottom: 30px;
        color: #6BBF59;
    }

    .content-box {
        background-color: #f5f5f5;
        border: 1px solid #dcdcdc;
        border-radius: 12px;
        padding: 20px;
        margin: 20px auto;
        width: 50%;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 30px;
    }

    .btn {
        background-color: #6BBF59;
        color: white;
        border: none;
        padding: 12px 20px;
        border-radius: 25px;
        font-size: 16px;
        cursor: pointer;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        transition: background-color 0.3s ease;
    }

        .btn:hover {
            background-color: #5AA74E;
        }
</style>

<!--***********************************************************************
*	                             HTML SECTION
************************************************************************-->
<div class="container">
    <h1 class="title">Welcome to Evera!</h1>
